@model IBS2.Models.Banka
@{
    ViewBag.Title = "Prikaz banke";
}

<header class="page-header">
    <h1 class="text-primary text-center">Prikaz banke po šifri</h1>

</header>

<div class="panel panel-primary">
    <div class="panel panel-heading">Prikaz banke </div>
    <div class="panel-body">
        @using (Html.BeginForm("AdminPrikaziView", "Admin", FormMethod.Post, new { @class = "form" }))
        {
            @Html.HiddenFor(m => m.BankaID, Model.BankaID);
            <div class="form-group">
                @Html.LabelFor(m => m.Naziv, "Naziv banke")
                @Html.TextBoxFor(m => m.Naziv, Model.Naziv, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Naziv, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Sediste, "Sedište banke")
                @Html.TextBoxFor(m => m.Sediste, Model.Sediste, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Sediste, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.GodinaOsnivanja, "Godina osnivanja banke")
                @Html.TextBoxFor(m => m.GodinaOsnivanja, Model.GodinaOsnivanja.ToString(), new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.GodinaOsnivanja, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.DropDownListFor(m => m.StatusID, new SelectList(Model.statusbanke1, "StatusID", "Status"), new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.DropDownListFor(m => m.VrstaID, new SelectList(Model.vrstabanke1, "VrstaID", "Tip"), new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Vlasnistvo, "Vlasništvo")
                @Html.RadioButtonFor(m => m.Vlasnistvo, "domaca") domaća
                @Html.RadioButtonFor(m => m.Vlasnistvo, "strana")strana
                @Html.RadioButtonFor(m => m.Vlasnistvo, "drzavna") državna
                @Html.ValidationMessageFor(m => m.Vlasnistvo, null, new { @class = "text-danger" })
            </div>


            @Html.HiddenFor(m => m.LicencaID, Model.LicencaID);

            <div class="form-group">
                @Html.LabelFor(m => m.Godisnjiprofit, "Godišnji profit")
                @Html.TextBoxFor(m => m.Godisnjiprofit, Model.Godisnjiprofit.ToString(), new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Godisnjiprofit, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.UkupnaAktivaiUkupniDug, "Ukupna aktiva i dug")
                @Html.TextBoxFor(m => m.UkupnaAktivaiUkupniDug, Model.UkupnaAktivaiUkupniDug.ToString(), new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.UkupnaAktivaiUkupniDug, null, new { @class = "text-danger" })
            </div>


            <input type="submit" class="btn btn-default" value="Izmeni" />
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

