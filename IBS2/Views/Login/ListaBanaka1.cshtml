@using IBS2.Models
@{
    ViewBag.Title = "Lista banaka";
}

<h2>Lista banaka</h2>

<table class="table table-condensed table-hover">
    <thead>
        <tr>
            <td>Naziv</td>
            <td>Sedište</td>
            <td>Godina osnivanja</td>
            <td>Vrsta</td>
            <td>Vlasništvo</td>
        </tr>

    </thead>
    @foreach(Banka banka in Admin.ListaBanaka())
    {

        <tr>

            <td>@banka.Naziv</td>
            <td>@banka.Sediste</td>
            <td>@banka.GodinaOsnivanja</td>
            <td>@banka.VrstaBanke.Tip</td>
            <td>@banka.Vlasnistvo</td>
        </tr>
    }
</table>